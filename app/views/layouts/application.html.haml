      %h1.logo
        %img(src="http://kifc.asia/images/astana-city-arms.jpg" width="70" style="float: left; margin-top: -15px; padding-right: 10px")
        %a(href="/")
          Kazahstan Islamic Finance Conference
      .main-text
        = yield
